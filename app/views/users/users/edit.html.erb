<h2>ユーザー情報編集</h2>

<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>

<h4>ユーザーアイコン</h4>

<p><%= f.file_field :image, accept: "image/*" %></p>

<p><%= f.label "ユーザーネーム" %></p>
<p><%= f.text_field :user_name %></p>

<p><%= f.label "氏名" %></p>
<p><%= f.text_field :last_name %></p>
<p><%= f.text_field :first_name %></p>

<p><%= f.label "フリガナ" %></p>
<p><%= f.text_field :last_name_kana %></p>
<p><%= f.text_field :first_name_kana %></p>

<p><%= f.label "メールアドレス" %></p>
<p><%= f.email_field :email %></p>

<p><%= f.label "郵便番号" %></p>
<p><%= f.text_field :postal_code %></p>

<p><%= f.label "住所" %></p>
<p><%= f.text_field :address %></p>

<p><%= f.label "電話番号" %></p>
<p><%= f.text_field :phone_number %></p>

<p><%= f.submit "編集内容を保存する",class:"btn btn-success mr-5" %></p>
<p><%= link_to "退会する", users_quit_path, class:"btn btn-danger mr-5" %></p>

<% end %>