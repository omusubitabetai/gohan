<!DOCTYPE html>
<html>
  <head>
    <title>gohan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag 'logo.jpg', width: '400' %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to "譲渡投稿一覧", foods_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "マイページ", user_path(@user.id), class: "nav-link" %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
        </ul>
      </div>
　　  <% elsif admin_signed_in? %>
　　  <div class="collapse navbar-collapse" id="navbarSupportedContent">
　　    <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to "譲渡投稿一覧", admins_foods_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ユーザー一覧", admins_users_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "譲受申請履歴一覧", admins_food_request_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link" %></li>
        </ul>
      </div>
      <% else %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "管理者ログイン", new_admin_session_path, class: "nav-link" %></li>
        </ul>
      </div>
      <% end %>
      <!--<form class="form-inline my-2 my-lg-0">-->
      <!--  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
      <!--  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">検索</button>-->
      <!--</form>-->
    </nav>
    <%= yield %>
  </body>
</html>
